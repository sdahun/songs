<?xml version="1.0" encoding="utf-8"?>
<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="byHand 1.0" modifiedIn="byHand 1.0" modifiedDate="2018-08-01T00:00:00">
  <properties>
    <titles>
      <title>Várj, és ne félj</title>
      <title>Wait for the Lord</title>
    </titles>
    <verseOrder>v1 v2</verseOrder>
    <authors>
      <author type="music">Jacques Berthier</author>
      <author type="words">Taizé Community</author>
      <author type="translation" lang="hu">Bálint Zsolt</author>
    </authors>
    <songbooks>
      <songbook name="Adj zengő éneket!" entry="144"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Várj, és ne félj,<br/>az Úr jön már!<br/>Várj, és ne félj,<br/>hű szívvel várj!</lines>
    </verse>
    <verse name="v2" lang="en">
      <lines>Wait for the Lord,<br/>whose day is near.<br/>Wait for the Lord:<br/>keep watch, take heart!</lines>
    </verse>
  </lyrics>
</song>
