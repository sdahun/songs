  <properties>
    <titles>
      <title>Áldjátok az Urat</title>
    </titles>
    <verseOrder>v1 v1 c1 c1</verseOrder>
    <authors>
      <author type="music">Héber népdal</author>
      <author type="translation" lang="hu">Illési István</author>
    </authors>
    <songbooks>
      <songbook name="Dicsérem Neved 1" entry="1"/>
    </songbooks>
    <themes>
      <theme>Dicséret</theme>
    </themes>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Áldjátok az Urat!<br/>Áldjátok szent nevét,<br/>kik házában álltok napról-napra,<br/>dicsérjétek szüntelen őt!</lines>
    </verse>
    <verse name="c1">
      <lines>Tárjátok kezeitek<br/>az élő Isten felé,<br/>áldjon meg téged Sionról az Úr,<br/>ragyogtassa arcát reád!</lines>
    </verse>
  </lyrics>
</song>