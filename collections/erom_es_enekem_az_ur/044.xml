    <titles>
      <title>Give thanks</title>
    </titles>
    <verseOrder>v1 v1 c1 c1 v1 v1 c1 c1 e1</verseOrder>
    <authors>
      <author type="music">Henry Smith</author>
      <author type="words">Henry Smith</author>
    </authors>
    <songbooks>
      <songbook name="Erőm és énekem az Úr" entry="44"/>
    </songbooks>
