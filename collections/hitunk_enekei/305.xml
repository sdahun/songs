      <title>Úr Isten, kérünk őrizzed</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <authors>
      <author type="music">Wittenberg, 1543.</author>
      <author type="words">Luther Márton, 1542. (1483-1546.)</author>
