  <properties>
    <titles>
      <title>Mikor leszek olyan már</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <authors>
      <author type="music">Hews George, 1835. (1806-1873.)</author>
      <author type="words">Wesley Charles (1707-1788.)</author>
    </authors>
    <songbooks>
      <songbook name="Hitünk énekei" entry="237"/>
    </songbooks>
    <themes>
      <theme>A keresztyén élet - megpróbáltatás</theme>
      <theme>Átadás</theme>
      <theme>Próba</theme>
      <theme>Új élet</theme>
      <theme>Vágyakozás</theme>
    </themes>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Mikor leszek olyan már,<br/>amilyennek Isten vár:<br/>balga – önmagam előtt,<br/>de a jóban, hitben bölcs.</lines>
    </verse>
    <verse name="v2">
      <lines>Add, hogy néked élhessek,<br/>minden rosszat megvessek,<br/>és a próbák idején<br/>adjál új erőt és fényt!</lines>
    </verse>
    <verse name="v3">
      <lines>Add, hogy egész életem<br/>néked szentelt tűz legyen!<br/>És a lelkem töltse be<br/>szent szerelmed öröme!</lines>
    </verse>
  </lyrics>
</song>
