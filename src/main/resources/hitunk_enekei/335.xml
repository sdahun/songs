  <properties>
    <titles>
      <title>Maradjon vélünk most az Úr</title>
    </titles>
    <verseOrder>v1 v2 v3</verseOrder>
    <authors>
      <author type="music">Walch James, 1860. (1837-1901.)</author>
      <author type="words">Ellerton John, 1870.</author>
    </authors>
    <songbooks>
      <songbook name="Hitünk énekei" entry="335"/>
    </songbooks>
    <themes>
      <theme>A gyülekezet élete - záró ének</theme>
      <theme>Este</theme>
      <theme>Záróének</theme>
    </themes>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Maradjon vélünk most az Úr,<br/>áldását adva ránk!<br/>Elhagyván áldott szent helyét,<br/>áradjon béke ránk!</lines>
    </verse>
    <verse name="v2">
      <lines>Maradjon vélünk most az Úr,<br/>amikor elmegyünk:<br/>kísérjen végig utunkon,<br/>míg hazaérkezünk.</lines>
    </verse>
    <verse name="v3">
      <lines>Maradjon vélünk majd az Úr,<br/>hogyha már itt az éj;<br/>hűsége óvjon bástyaként,<br/>lelkünket őrizvén!</lines>
    </verse>
  </lyrics>
</song>
