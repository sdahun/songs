  <properties>
    <titles>
      <title>Házadban mennyei Atyánk</title>
    </titles>
    <verseOrder>v1 v2</verseOrder>
    <authors>
      <author type="music">Hastings Thomas</author>
      <author type="words">Angolból</author>
    </authors>
    <songbooks>
      <songbook name="Üdv- és adventi énekek" entry="8"/>
    </songbooks>
    <themes>
      <theme>Istentisztelethez: Megnyitó énekek</theme>
    </themes>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Házadban mennyei Atyánk,<br/>tekints kegyesen mireánk,<br/>szenteld jóra elméinket,<br/>vezess, oktass, buzdíts minket.</lines>
    </verse>
    <verse name="v2">
      <lines>Adj buzgóságot szívünknek,<br/>figyelmet adj értelmünknek,<br/>hogy hitben növekedhessünk,<br/>s téged méltán tisztelhessünk.</lines>
    </verse>
  </lyrics>
</song>
