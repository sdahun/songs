      <title>Kegyelemből léphetünk be</title>
      <title lang="en">Only By Grace</title>
    </titles>
    <authors>
      <author type="music">Gerrit Gustafson</author>
      <author type="words">Gerrit Gustafson</author>
      <author type="translation" lang="hu">Mézes Áron</author>
