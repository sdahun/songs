  <properties>
    <titles>
      <title>Megtört a teste</title>
      <title lang="en">Broken For Me</title>
    </titles>
    <authors>
      <author type="music">Janet Lunt</author>
      <author type="translation" lang="hu">Kulcsár Tibor</author>
    </authors>
