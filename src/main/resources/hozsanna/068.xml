    <titles>
      <title>Ez a szó: szeretet</title>
      <title>Love In Any Language</title>
    </titles>
    <authors>
      <author type="music">John Mays</author>
      <author type="music">Jon Mohr</author>
      <author type="words">John Mays</author>
      <author type="words">Jon Mohr</author>
