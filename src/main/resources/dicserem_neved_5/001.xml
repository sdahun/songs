  <properties>
    <titles>
      <title>A kegyelmed köszönöm Neked</title>
    </titles>
    <authors>
      <author type="music">Michael Payne</author>
      <author type="words">Michael Payne</author>
      <author type="music">Marika Payne</author>
      <author type="words">Marika Payne</author>
