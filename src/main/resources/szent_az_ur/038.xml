<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="byHand 1.0" modifiedIn="byHand 1.0" modifiedDate="2013-08-01T00:00:00">
  <properties>
    <titles>
      <title>Szeretet, szeretet</title>
    </titles>
    <verseOrder>v1 v2</verseOrder>
    <authors>
      <author type="words">Szilvási Ágota</author>
    </authors>
    <songbooks>
      <songbook name="Szent az Úr" entry="38"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Szeretet, szeretet,<br/>hivatásunk ez legyen!<br/>Szeresd társad, mint magad,<br/>mert Isten is szeretett.</lines>
    </verse>
    <verse name="v2">
      <lines>Dicsőség az Istennek<br/>magasságos mennyekben.<br/>Békesség és jóakarat,<br/>dicsőség az Istennek.</lines>
    </verse>
  </lyrics>
</song>