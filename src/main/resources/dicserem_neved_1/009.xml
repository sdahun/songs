    <songbooks>
      <songbook name="Dicsérem Neved 1" entry="9"/>
    </songbooks>
    <themes>
      <theme>Bűnbánat, megtérés</theme>
      <theme>1Jn 1,9</theme>
    </themes>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Aki Isten felé fordul,<br/>igaz bűnbánatra indul,<br/>aki megtér hamis útról,<br/>Isten annak megbocsát!</lines>
    </verse>
    <verse name="v2">
      <lines>Aki Isten felé fordul,<br/>igaz bűnbánatra indul,<br/>aki megtér hamis útról,<br/>Isten hallja, ha kiált,<br/>küldi reá áldását!</lines>
    </verse>
  </lyrics>
</song>
