  <properties>
    <titles>
      <title>Aki Isten felé fordul</title>
    </titles>
    <authors>
      <author type="music">Cyril Sovire</author>
      <author type="translation" lang="hu">Kovács Z.</author>
      <author type="translation" lang="hu">Jobbágy I.</author>
    </authors>
